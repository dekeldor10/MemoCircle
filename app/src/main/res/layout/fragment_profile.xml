<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ProfileFragment">



    <TextView
        android:id="@+id/isSignedIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The user is..." />

    <TextView
        android:id="@+id/userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="userName" />

    <TextView
        android:id="@+id/textViewUserId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UserID" />

    <TextView
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28dp"
        android:text="userEmail" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Your phone number for SMS user authentication and sign-in"
        android:inputType="phone" />

    <Button
        android:id="@+id/confirmPhoneNumberButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        style="@style/Widget.Material3.FloatingActionButton.Primary"
        android:text="Send SMS" />

    <Button
        android:id="@+id/updateInfoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="16sp"
        style="@style/Widget.Material3.FloatingActionButton.Primary"
        android:text="Update Name and E-mail" />

    <Button
        android:id="@+id/signOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        style="@style/Widget.Material3.FloatingActionButton.Primary"
        android:text="Sign Out" />

    <Button
        android:id="@+id/signInEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In With E-mail" />

</LinearLayout>